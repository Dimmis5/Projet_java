<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.projet_java.controller.EdtEtudiantController"
            prefHeight="600.0" prefWidth="800.0">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <top>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10"/>
            </padding>

            <Label text="Emploi du temps"/>

            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="boutonSemainePrecedente" text="Semaine précédente"/>
                <Button fx:id="boutonSemaineCourante" text="Semaine actuelle"/>
                <Button fx:id="boutonSemaineSuivante" text="Semaine suivante"/>
            </HBox>

            <Label fx:id="etiquetteMoisAnnee" alignment="CENTER" maxWidth="Infinity"/>
        </VBox>
    </top>

    <center>
        <GridPane fx:id="grilleCalendrier" hgap="1" vgap="1"/>
    </center>
</BorderPane>